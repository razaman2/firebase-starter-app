{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "skipLibCheck": true,
        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "preserve",
        /* Linting */
        "strict": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "allowJs": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./*"
            ],
            "@collections/*": [
                "./collections/*"
            ],
            "@helpers/*": [
                "./helpers/*"
            ],
            "@src/*": [
                "./src/*"
            ],
            "@assets/*": [
                "./src/assets/*"
            ],
            "@components/*": [
                "./src/components/*"
            ],
            "@factories/*": [
                "./src/factories/*"
            ],
            "@layouts/*": [
                "./src/layouts/*"
            ],
            "@pages/*": [
                "./src/pages/*"
            ],
            "@routes/*": [
                "./src/routes/*"
            ],
            "@stores/*": [
                "./src/stores/*"
            ]
        },
        "types": [
            "./node_modules/pinia-plugin-persist"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}
